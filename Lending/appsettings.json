{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=LendingDB;Trusted_Connection=True;TrustServerCertificate=True;"
  },

  "Jwt": {
    "Key": "CHANGE-IN-USER-SECRETS",
    "Issuer": "LendingAPI",
    "Audience": "LendingClient",
    "ExpiryMinutes": 60
  },

  "EmailSettings": {
    "From": "no-reply@lending.com",
    "SmtpServer": "smtp.yourmailserver.com",
    "Port": 587,
    "EnableSSL": true,
    "UserName": "smtp-username",
    "Password": "smtp-password"
  },

  "Cloudinary": {
    "CloudName": "your-cloud-name",
    "ApiKey": "your-api-key",
    "ApiSecret": "your-api-secret"
  }
}
